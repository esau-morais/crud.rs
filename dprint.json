{
  "incremental": true,
  "lineWidth": 260,
  "useTabs": true,
  "indentWidth": 2,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle"
  },
  "json": {},
  "markdown": {},
  "toml": {},
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/.turbo",
    "**/dist",
    "pnpm-lock.yaml",
    "**/target"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.91.6.wasm",
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.2.wasm",
    "https://plugins.dprint.dev/toml-0.6.2.wasm"
  ]
}
